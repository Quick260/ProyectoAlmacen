@page
@model GenerarPermisoModel
@{
    ViewData["Title"] = "Generar Permiso";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form method="post" class="mx-auto mt-4" style="width: 600px;">
    <div class="mb-3">
        <label for="Plantel">Plantel:</label>
        <input type="text" id="Plantel" name="Plantel" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="Fecha">Fecha:</label>
        <input type="date" id="Fecha" name="Fecha" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="NombreCompleto">Nombre Completo:</label>
        <input type="text" id="NombreCompleto" name="NombreCompleto" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="Registro">Registro:</label>
        <input type="text" id="Registro" name="Registro" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="GradoGrupo">Grado y Grupo:</label>
        <input type="text" id="GradoGrupo" name="GradoGrupo" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="Laboratorio">Laboratorio:</label>
        <input type="text" id="Laboratorio" name="Laboratorio" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="HoraSalida">Hora de Salida del Material:</label>
        <input type="time" id="HoraSalida" name="HoraSalida" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="HoraRegreso">Hora de Regreso del Material:</label>
        <input type="time" id="HoraRegreso" name="HoraRegreso" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="CantidadMaterial">Cantidad de Material Solicitado:</label>
        <input type="text" id="CantidadMaterial" name="CantidadMaterial" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="NombreMaterial">Nombre del Material Solicitado:</label>
        <input type="text" id="NombreMaterial" name="NombreMaterial" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="NombreFirmaProfesor">Nombre y Firma del Profesor:</label>
        <input type="text" id="NombreFirmaProfesor" name="NombreFirmaProfesor" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Permiso</button>
</form>
