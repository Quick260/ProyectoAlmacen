@page
@model CrearEstudianteModel
@{
    ViewData["Title"] = "Crear Estudiante";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form method="post" class="mx-auto mt-4" style="width: 300px;">
    <div class="mb-3">
        <label for="Registro">Registro:</label>
        <input type="text" id="Registro" name="Registro" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="Grupo">Grupo:</label>
        <input type="text" id="Grupo" name="Grupo" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Crear Estudiante</button>
</form>
